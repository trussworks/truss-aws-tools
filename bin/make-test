#! /bin/sh

go_test_output="/tmp/go-test.out"

go test -v github.com/trussworks/truss-aws-tools/... | tee "${go_test_output}"

if [ -n "$CIRCLECI" ]; then
    mkdir -p "${TEST_RESULTS}"/gotest
    bin/go-junit-formatter < "${go_test_output}" \
                           > "${TEST_RESULTS}/gotest/go-test-report.xml"
fi
