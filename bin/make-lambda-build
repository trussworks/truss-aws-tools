#!/usr/bin/env bash

set -eux -o pipefail

# cleanup temp directory
cleanup() {
  if [[ -n "$build_dir" ]]; then
    rm -rf "$build_dir"
  fi
}
trap "cleanup" EXIT INT

readonly build_dir=$(mktemp -d)
readonly lambda_tools="rds-snapshot-cleaner trusted-advisor-refresh iam-keys-check rds-cloudwatch-logs aws-health-notifier ami-cleaner ecs-service-deployer"
mkdir -p "$build_dir"

for cmd in $lambda_tools
do
    cmd_name=$(basename "$cmd")
    GOOS=linux go build -o "$build_dir/$cmd_name" ./cmd/"$cmd_name"
done

zip -j truss-aws-tools.zip "$build_dir"/*
